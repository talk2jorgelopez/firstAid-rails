<%- model_class = SurvivalGuide -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:guide_title) %>:</strong></dt>
  <dd><%= @survival_guide.guide_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:guide_para1) %>:</strong></dt>
  <dd><%= @survival_guide.guide_para1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:guide_para2) %>:</strong></dt>
  <dd><%= @survival_guide.guide_para2 %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              survival_guides_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_survival_guide_path(@survival_guide), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              survival_guide_path(@survival_guide),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
