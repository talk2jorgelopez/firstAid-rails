<%- model_class = PalliativeCare -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pCare_title) %>:</strong></dt>
  <dd><%= @palliative_care.pCare_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pCare_para1) %>:</strong></dt>
  <dd><%= @palliative_care.pCare_para1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pCare_para2) %>:</strong></dt>
  <dd><%= @palliative_care.pCare_para2 %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              palliative_cares_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_palliative_care_path(@palliative_care), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              palliative_care_path(@palliative_care),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
