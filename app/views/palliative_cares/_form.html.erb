<%= form_for @palliative_care, :html => { :class => "form-horizontal palliative_care" } do |f| %>

  <% if @palliative_care.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@palliative_care.errors.count, "error") %> prohibited this palliative_care from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @palliative_care.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pCare_title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pCare_title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pCare_title) %>
  </div>
  <div class="form-group">
    <%= f.label :pCare_para1, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pCare_para1, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pCare_para1) %>
  </div>
  <div class="form-group">
    <%= f.label :pCare_para2, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pCare_para2, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pCare_para2) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                palliative_cares_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
