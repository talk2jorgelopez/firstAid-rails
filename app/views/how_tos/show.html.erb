<%- model_class = HowTo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:how_to_id) %>:</strong></dt>
  <dd><%= @how_to.how_to_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:how_to_title) %>:</strong></dt>
  <dd><%= @how_to.how_to_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:how_to_url) %>:</strong></dt>
  <dd><%= @how_to.how_to_url %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              how_tos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_how_to_path(@how_to), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              how_to_path(@how_to),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
