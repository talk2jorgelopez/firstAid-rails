<%- model_class = Firstaid -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:firstAidName) %>:</strong></dt>
  <dd><%= @firstaid.firstAidName %></dd>
  <dt><strong><%= model_class.human_attribute_name(:firstAidDescription) %>:</strong></dt>
  <dd><%= @firstaid.firstAidDescription %></dd>
  <dt><strong><%= model_class.human_attribute_name(:symptom_id) %>:</strong></dt>
  <dd><%= @firstaid.symptom_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vital_id) %>:</strong></dt>
  <dd><%= @firstaid.vital_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:severity_id) %>:</strong></dt>
  <dd><%= @firstaid.severity_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              firstaids_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_firstaid_path(@firstaid), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              firstaid_path(@firstaid),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
